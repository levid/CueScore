var live = function() {
    var me = this;
    
    try {
          Titanium.include('/lib/Common.js');
		  Titanium.include('/pages/toolViews/toolsMenuView.js');
    } catch(e) {}

	this.liveWindow = Titanium.UI.createWindow({
		orientationModes: [Titanium.UI.PORTRAIT]
	});

	this.liveContainer = Titanium.UI.createView({
		backgroundColor: '#000000',
		top: 0,
		left: 0,
		height: this.getPlatformHeight(),
		width: this.getPlatformWidth()
	});

	this.liveScrollView = Titanium.UI.createScrollView({
        contentWidth:'auto',
        contentHeight:'auto',
        minZoomScale: 0,
        maxZoomScale: 10,
	    backgroundColor: 'transparent',
		top: 12,
		left: 12,
		height: 390,
		width: 295,
		showPagingControl:true
	});

	this.liveView = Titanium.UI.createView({
		height: 243,
		width: 243,
		font: {fontSize:13, fontWeight: 'bold', fontFamily:'HelveticaNeue-Bold'}
	});
	this.comingSoon = Titanium.UI.createView({
		backgroundImage: 'images/match/layout/overlay-comingsoon.png',
		backgroundColor: 'transparent',
		top: 20,
		height: 243,
		width: 243
	});
	this.liveLabel = Titanium.UI.createLabel({
		text: 'test test test test ',
		top: 0,
		left: 0,
		color: '#ffffff',
		height: 1500,
		width: 285,
		font: {fontSize:13, fontWeight: 'bold', fontFamily:'HelveticaNeue-Bold'}
	});
	this.liveView.add(this.comingSoon);
	
	var toolbarLabel = Titanium.UI.createLabel({
		text: 'Live',
		color: '#ffffff',
		shadowColor: '#000000',
		textAlign: 'center',
		font: {fontSize:20, fontWeight: 'bold', fontFamily:'HelveticaNeue-Bold'}
	});
	
	titleBar.add(dashboardButton);
	titleBar.add(toolbarLabel);
	//this.liveView.add(this.liveLabel);

/*
	this.liveView.addEventListener('click', function(){
        me.liveWindow.close();
        me.dashboardWindow.show();
    });
    */

	//this.liveScrollView.add(this.liveView);
	this.liveContainer.add(toolsMenuContainer);
	this.liveContainer.add(titleBar);  //from t
	this.liveContainer.add(this.liveView);
	this.liveWindow.add(this.liveContainer);
	
	this.dashboardButton.addEventListener('click', function(){
	   	me.liveWindow.close();
		me.dashboardWindow.show();
	});

    this.showLive = function() {
       	if(Ti.Platform.name != 'android') {
            Titanium.UI.iPhone.showStatusBar();
            this.liveWindow.open({fullscreen:false});
        } else {
            this.liveWindow.open({fullscreen:true});
        }
    };
    showLive();
    return this;
};
